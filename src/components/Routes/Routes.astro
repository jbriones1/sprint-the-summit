---
/**
 * * Pricing cards with three cards
 */

import Button from '@components/Button/Button.astro';
import { Image } from 'astro:assets';

interface RunRoute {
  name: string; // plan name
  distance: number;
  elevation: string;
  terrain: string;
  // price: number;
  // features: string[]; // list of features
  image: ImageMetadata; // imported image
}

import image3 from '@assets/images/couple-1-square.jpg';
import image1 from '@assets/images/couple-5-min.jpg';
import image2 from '@assets/images/couple-6-crop.jpg';

const routeData: RunRoute[] = [
  {
    name: 'Runner',
    distance: 10,
    elevation: 'Flat',
    terrain: 'Road',
    image: image1
  },
  {
    name: 'Sprinter',
    distance: 15,
    elevation: 'Slight',
    terrain: 'Path',
    image: image2
  },
  {
    name: 'Summiter',
    distance: 25,
    elevation: 'Varied',
    terrain: 'Mixed',
    image: image3
  }
];
---

<section id="routes" class="mx-auto max-w-6xl scroll-mt-10 px-4 py-8 md:py-12">
  <div class="mx-auto max-w-6xl text-center">
    <h2 class="h2 text-pretty uppercase">Choose A Route</h2>
  </div>

  <!-- works for 3 pricing plans, adjust grid cols here to support more or less -->
  <div
    class="mx-auto grid w-full max-w-md gap-12 pt-8 sm:max-w-none sm:grid-cols-2 md:pt-12 lg:grid-cols-3"
  >
    {
      routeData.map(plan => (
        <div class="flex w-full flex-col">
          <div>
            <div class="aspect-[3/4] h-auto w-full overflow-hidden">
              <Image
                src={plan.image}
                alt={plan.name}
                width={450}
                densities={[1.5, 2]}
                class="h-full w-full object-cover"
              />
            </div>
          </div>
          <div class="border-primary-200 flex h-full flex-col justify-between border-2 border-t-0 pt-10 pb-10">
            <div>
              <h3 class="h2 text-center">{plan.name}</h3>

              <ul class="mt-4 flex flex-col gap-3 px-8">
                <li class="leading-snug lg:text-lg lg:leading-snug">Distance: {plan.distance}km</li>
                <li class="leading-snug lg:text-lg lg:leading-snug">Elevation: {plan.elevation}</li>
                <li class="leading-snug lg:text-lg lg:leading-snug">Terrain: {plan.terrain}</li>
              </ul>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</section>
