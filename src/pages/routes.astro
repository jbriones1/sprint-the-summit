---
import RouteCard from '@components/RouteCard/RouteCard.astro';
import routeData from '@config/routeData.json';
import PageLayout from '@layouts/PageLayout.astro';
---

<PageLayout title={'Routes'} description={'Learn about the routes you can run during the event.'}>
  {
    routeData.map((route, index) => (
      <RouteCard
        id={index + 1}
        isAlignedRight={index % 2 === 1}
        name={route.name}
        distance={route.distance}
        elevation={route.elevation}
        terrain={route.terrain}
        routeImage={route.routeImage}
        routeImageAlt={route.routeImageAlt}
      />
    ))
  }
</PageLayout>
